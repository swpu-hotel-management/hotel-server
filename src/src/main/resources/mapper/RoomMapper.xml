<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swpu.hotelserver.emp.mapper.RoomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.swpu.hotelserver.emp.entity.Room">
        <id column="id" property="id" />
        <result column="room_num" property="roomNum" />
        <result column="type" property="type" />
        <result column="price" property="price" />
        <result column="description" property="description" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, room_num, type, price, desc, status
    </sql>

    <!-- 更新房间的方法 -->
    <update id="updateRoom">
        UPDATE room
        <set>
            <if test="type != null">type = #{type},</if>
            <if test="price != null">price = #{price},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status}</if>
        </set>
        WHERE room_num = #{roomNum}
    </update>
    <!-- 分页查询 -->
    <!-- 分页查询 -->
    <select id="page" parameterType="com.swpu.hotelserver.emp.entity.Room" resultType="com.swpu.hotelserver.emp.entity.Room">
        SELECT * FROM room
        <where>
            <if test="room.roomNum != null">
                AND room_num = #{room.roomNum}
            </if>
            <if test="room.type != null">
                AND type = #{room.type}
            </if>
            <if test="room.status != null">
                AND status = #{room.status}
            </if>
        </where>
    </select>

</mapper>
